<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="Quản trị viên"
        android:textColor="@color/fui_linkColor"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvhello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginStart="22dp"
        android:layout_marginTop="50dp"
        android:text="Xin chào:"
        android:textColor="@color/fui_bgPhone"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/tvFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvhello"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/tvhello"
        android:text="FullName"
        android:textColor="@color/fui_bgPhone"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvhello"
        android:layout_below="@+id/tvhello"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="EMAIL"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignStart="@+id/tvEmail"
        android:layout_below="@+id/tvEmail"
        android:layout_marginTop="20dp"
        android:text="Vui lòng chọn mục quản lý:"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="20dp" />
    <Button
        android:id="@+id/btn_picmanga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvhello"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="26dp"
        android:ems="20"
        android:text="Truyện tranh" />

    <Button
        android:id="@+id/btn_storymanga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvhello"
        android:layout_below="@+id/btn_picmanga"
        android:layout_marginTop="18dp"
        android:ems="20"
        android:text="Truyện đọc" />


</RelativeLayout>